{
  characterPicker: {
    type: "grid",
    items: "$$characters",
    config: {
      columns: 12,
      gap: "9px",
      captureFocus: true,
    },
    rect: {
      x: "center",
      y: "center",
      width: 800,
      height: 400,
      yOffset: 200,
    },
    element: {
      type: "button",
      config: {
        class: "image-button",
        label: "$$index",
        style: {
          backgroundColor: "$$color",
        },
        focusStyle: {
          borderRadius: "25px",
          outline: "5px solid blue",
        },
      },
      events: {
        trigger: "characterTrigger",
      },
      rect: {
        x: "center",
        y: "center",
        width: 90,
        height: 90,
      },
      children: {
        image: {
          type: "image",
          rect: {
            x: "center",
            y: "center",
            width: 90,
            height: 90,
          },
          style: {
            border: "none",
          },
        },
        text: {
          type: "text",
          rect: {
            x: "center",
            y: "bottom",
            width: 100,
            height: 30,
          },
          config: {
            fontSize: 30,
            style: {
              textAlign: "right",
              color: "green",
            },
            label: "$$text",
          },
        },
      },
    },
  },
}
